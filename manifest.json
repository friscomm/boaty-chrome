{
  "manifest_version": 2,
  "name": "Boatify",
  "version": "1.0",
  "description": "Adds Boaty McBoatnet and an accompanying nautical theme to Igloo",
  "icons": {
    "48": "icons/boatnet-bigger.png",
    "128": "icons/boatnet-bigger.png"
  },
  "web_accessible_resources": [
    "images/*.jpg",
    "images/*.png"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.igloocommunities.com/*"],
      "js": ["boaty.js"]
    }
  ],
  "permissions":  ["activeTab"]
}
